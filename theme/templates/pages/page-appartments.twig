{% set navbar_link = site.link %}

{% block body %}

    {% include 'components/fullscreen-360.twig' %}

    {% include 'sections/splash.twig' with {
        'background_color': 'white',
        'content': '360',
        'text': post.get_field('splash_360_appartment'),
        'scroll_caption': post.get_field('splash_360_scroll_button_caption'),
        'image': post.get_field('splash_360_image'),
        'kuula': post.get_field('splash_360_kuula')
    } %}


    {# {% include 'sections/appartments-list.twig' with {
        'header': post.get_field('appartment_list_header'),
        'disclaimer': post.get_field('appartment_list_disclaimer'),
    } %} #}

    {% include 'sections/woningzoeker.twig' %}

    {% include 'sections/text-360.twig' with {
        'isAppartments': true,
        'clipping': 'is-clipped-right',
        'orientation': 'text-left',
        'background_color': 'red',
        'title': post.get_field('right_360_title'),
        'text': post.get_field('right_360_text'),
        'subtitle': post.get_field('right_360_appartment'),
        'image': post.get_field('right_360_image'),
        'kuula': post.get_field('right_360_kuula'),
        'subtitle_two': post.get_field('right_360_appartment_two'),
        'image_two': post.get_field('right_360_image_two'),
        'kuula_two': post.get_field('right_360_kuula_two')    
    } %}

        {% include 'sections/text-image.twig' with {
        'clipping': post.get_field('left_360_clipping'),
        'background_color': post.get_field('left_360_background_color'),
        'orientation': post.get_field('left_360_orientation'),
        'title': post.get_field('left_360_title'),
        'text': post.get_field('left_360_text'),
        'slides': post.get_field('left_360_slides'),
        'is_fullheight': post.get_field('left_360_is_fullheight')
    } %}

{% endblock %}